@model IEnumerable<CourseApp1.data.Trainee_Courses>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Students in this Course</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Trainee.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainee.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Registration_date)
        </th>
        <th></th>
    </tr>
    @if (Model != null&&Model.Count()>0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Trainee.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Registration_date)
                </td>

            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">
                <div class="alert alert-danger">There is no students in this course!</div>
            </td>
        </tr>
    }


</table>
