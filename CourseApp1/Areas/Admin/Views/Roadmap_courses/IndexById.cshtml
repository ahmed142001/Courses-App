@model IEnumerable<CourseApp1.data.Roadmap_courses>

@{
    ViewBag.Title = "Roadmap Courses";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Roadmap Courses</h2>

<p>
    @Html.ActionLink("Add Course", "Create", new {id= ViewBag.RoadmapId})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Link)
        </th>*@
        <th>
            Links
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roadmap.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>*@
    <td>
        <a href="@Url.Action("Index","RoadmapLinks",new { id = item.Id })">
            <button class="btn btn btn-primary">Links</button>
        </a>
    </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roadmap.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
