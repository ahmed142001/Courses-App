@model IEnumerable<CourseApp1.data.RoadmapLink>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Add Link", "Create", new {id= ViewBag.courseid})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Link)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roadmap_courses.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Link)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Roadmap_courses.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.LinkId }) |
            @Html.ActionLink("Details", "Details", new { id=item.LinkId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LinkId })
        </td>
    </tr>
}

</table>
