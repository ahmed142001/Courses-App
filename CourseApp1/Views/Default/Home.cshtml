@model IEnumerable<CourseApp1.data.Cours>

@{
    ViewBag.Title = "home2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-element-bundle.min.js"></script>
<style>
    
    swiper-container {
        width: 100%;
        height: 100%;
    }

    swiper-slide {
        text-align: center;
        font-size: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        swiper-slide img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    swiper-container {
        width: 100%;
        height: 300px;
    }
</style>

<body style="font-family: roboto;" class="bg-danger">
    <div class="main p-5 my-2">
        <div class="header1 w-50 p-5">
            <h1 class="text-light">LEARN ONLINE</h1>
            <h3 class="text-light">Lorem ipsum, dolor sit amet consectetur adipisicing elit. Magnam deserunt velit reiciendis perspiciatis est. Culpa praesentium ad, pariatur placeat libero debitis officia! Distinctio enim cum ut nam ratione nobis molestias?</h3>
            <button class="my-5">LOGIN NOW</button>
        </div>

    </div>
    <!-- COURSES-->
    <div class=" slideing_section bg-black">
        <div class="courses my-2 p-4 ">
            <h2 class="text-light">CHOOSE COURSES</h2>
            <div class="choose">
                <button class="bg-transparent p-2 border-0"><h2 class="text-light">1</h2></button>
                <button class="bg-transparent p-2 border-0"><h2 class="text-light">2</h2></button>
                <button class="bg-transparent p-2 border-0"><h2 class="text-light">3</h2></button>
            </div>
        </div>
        <swiper-container class="mySwiper" slides-per-view="6" centered-slides="true" space-between="30" pagination="true" navigation="true">
            <!--LOOP USING <SWIPER-SLIDE>-->
            @foreach (var item in Model)
            {
                <swiper-slide>
                    <div class="card m-4" style="width: 18rem;height:17rem;">
                        <img src="~/Uploads/Courses/@item.ImgPath" class="card-img-top" alt="No image">
                        <div class="card-body ">
                            <h5 class="card-title">@item.Name</h5>
                            <a href="@Url.Action("Details", "Cours", new {id=item.ID})" class="btn btn-primary">Details</a>
                        </div>
                    </div>
                </swiper-slide>
            }


        </swiper-container>
    </div>
</body>