@model IEnumerable<CourseApp1.data.Roadmap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<div class="courses_wrapper">
    <div class="d-flex flex-row justify-content-start align-content-center">
        <a href="@Url.Action("Index","Default")" class="course_back"><span id="back_span" class="material-symbols-outlined">arrow_back_ios</span></a>
        <h1 class="courses_header">ROADMAPS</h1>
    </div>
    <div class="coursescards_wrapper">
        <!--LOOP OVER <A>-->
        @foreach (var item in Model)
        {
            <a href="@Url.Action("RoadmapCourses","Roadmaps",new { id = item.Id })" class="room_link">
                <div class="room">
                    <h2 class="rooms_name">@item.Name</h2>
                </div>
            </a>
        }        
    </div>

</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>