@model IEnumerable<CourseApp1.data.Favourite>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_NewLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cours.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AspNetUser.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cours.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.favId }) |
            @Html.ActionLink("Details", "Details", new { id=item.favId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.favId })
        </td>
    </tr>
}

</table>
